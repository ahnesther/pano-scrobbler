<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <ernestoyaquello.com.verticalstepperform.VerticalStepperFormView
            android:id="@+id/stepper_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:form_allow_step_opening_on_header_click="false"
            app:form_circle_background_color="?colorPrimaryContainer"
            app:form_circle_completed_background_color="?colorSecondaryContainer"
            app:form_circle_error_background_color="?colorSecondaryContainer"
            app:form_circle_text_color="?colorOnSecondaryContainer"
            app:form_close_last_step_on_completion="true"
            app:form_display_bottom_navigation="false"
            app:form_display_step_buttons="false"
            app:form_include_confirmation_step="false"
            app:form_title_text_color="?colorPrimary"
            app:form_title_text_size="20sp" />

        <TextView
            android:id="@+id/onboarding_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:alpha="0.75"
            android:text="@string/pref_privacy_policy"
            android:textColor="?colorSecondary" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>